<%- include('partials/navbar')%>

<div class="container">
      <div class="row mt-5">
            <div class="col-md-7">
                  <table class="table table-bordered table-hover">
                        <thead>
                              <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Direccion</th>
                                    <th>Telefono</th>
                                    <th>Operaciones</th>
                              </tr>
                        </thead>
                        <tbody>
                              <% data.map(item=>{ %>
                                    <tr>
                                          <td><%= item.id %></td>
                                          <td><%= item.name %></td>
                                          <td><%= item.address %></td>
                                          <td><%= item.phone %></td>
                                          <td>
                                                <a href="/delete/<%=item.id%>" class="btn btn-danger">Eliminar</a>
                                                <a href="/update/<%=item.id%>" class="btn btn-warning">Editar</a>
                                          </td>
                                    </tr>
                              <% })%>
                        </tbody>
                  </table>
            </div>
            <div class="col-md-5">
                  <form action="/add" method="POST" class="">
                        <div class="form-group">
                              <input type="text" name="name" placeholder="name" class="form-control">
                        </div>
                        <div class="form-group">
                              <input type="text" name="address" placeholder="address" class="form-control">                              
                        </div>                        
                        <div class="form-group">
                              <input type="tel" name="phone" placeholder="Phone" class="form-control">
                        </div>                        
                        <button type="submit" class="btn btn-dark">Guadar</button>
                  </form>
            </div>            
      </div>
</div>




<%- include('partials/footer')%>