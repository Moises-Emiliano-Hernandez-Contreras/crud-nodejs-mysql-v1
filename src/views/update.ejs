<div class="container mt-5">
      <div class="row">
            <div class="col-md-5">
                  <div class="card">
                        <div class="card-body">
                              <form action="/updated/<%=data.id%>" method="POST" class="">
                                    <div class="form-group">
                                          <input type="text" name="name"  value="<%=data.name%>" placeholder="name" class="form-control">
                                    </div>
                                    <div class="form-group">
                                          <input type="text" name="address" value="<%= data.address%>" placeholder="address" class="form-control">                              
                                    </div>                        
                                    <div class="form-group">
                                          <input type="tel" name="phone" value="<%=data.phone%>" placeholder="Phone" class="form-control">
                                    </div>                        
                                    <button type="submit" class="btn btn-dark">Actualizar</button>
                              </form>                              
                        </div>
                  </div>
            </div>
      </div>
</div>

